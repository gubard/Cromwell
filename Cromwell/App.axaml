<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sg="clr-namespace:Cromwell.SourceGenerator"
             xmlns:dha="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             x:Class="Cromwell.App"
             RequestedThemeVariant="Default">
    <Application.DataTemplates>
        <sg:CromwellViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Assets/Langs/en-US.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <dha:DialogHostStyles />
        <StyleInclude Source="Styles/Theme.axaml" />
    </Application.Styles>
</Application>