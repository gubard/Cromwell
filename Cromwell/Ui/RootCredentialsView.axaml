<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Cromwell.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cromwell.Ui.RootCredentialsView"
             x:DataType="ui:RootCredentialsViewModel">
    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="Loaded">
            <InvokeCommandAction Command="{Binding InitializedCommand}" />
        </EventTriggerBehavior>
    </Interaction.Behaviors>

    <Grid RowDefinitions="*,Auto">
        <ScrollViewer Classes="vertical-scroll">
            <StackPanel>
                <ItemsControl IsVisible="{Binding !Header.IsMulti}"
                              ItemsSource="{Binding Credentials}"
                              Classes="credential-view" />
                <ListBox IsVisible="{Binding Header.IsMulti}"
                         ItemsSource="{Binding Credentials}"
                         SelectionMode="Multiple"
                         Classes="credential-view"
                         SelectedItems="{Binding SelectedCredentials}"
                         WrapSelection="True" />
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="1"
                Classes="alignment-stretch content-alignment-center h1"
                Content="{DynamicResource Lang.Create}"
                Command="{Binding ShowCreateViewCommand}" />
    </Grid>
</UserControl>