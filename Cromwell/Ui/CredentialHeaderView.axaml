<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Cromwell.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cromwell.Ui.CredentialHeaderView"
             x:DataType="ui:CredentialHeaderViewModel">
    <Panel DataContext="{Binding Credential}">
        <TextBlock Classes="alignment-left-center" Text="{Binding Name}" />

        <Grid RowDefinitions="*,*,*">
            <Panel Classes="for-drop" Tag="DropUp">
                <Rectangle Classes="drop-aria" />
                <TextBlock Classes="alignment-center m-10" Text="{DynamicResource Lang.Up}" />
            </Panel>
            <Panel Grid.Row="2" Classes="for-drop" Tag="DropDown">
                <Rectangle Classes="drop-aria" />
                <TextBlock Classes="alignment-center m-10" Text="{DynamicResource Lang.Down}" />
            </Panel>
        </Grid>
    </Panel>
</UserControl>