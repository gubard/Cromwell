<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Cromwell.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cromwell.Ui.EditCredentialView"
             x:DataType="ui:EditCredentialViewModel">
    <Grid RowDefinitions="*,Auto">
        <ScrollViewer Classes="vertical-scroll">
            <ContentControl Content="{Binding CredentialParameters}" />
        </ScrollViewer>

        <StackPanel Grid.Row="1" Classes="accept-panel">
            <Button Content="{DynamicResource Lang.Save}" Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</UserControl>