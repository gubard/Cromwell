<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Cromwell.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cromwell.Ui.NavigationBarView"
             x:DataType="ui:NavigationBarViewModel">
    <Grid ColumnDefinitions="Auto,*,Auto">
        <Button Grid.Column="0"
                Content="{DynamicResource Lang.Back}"
                Command="{Binding BackCommand}"
                IsEnabled="{Binding IsCanBack}" />
        <ContentControl Grid.Column="1" Content="{Binding Header}" />
        <Button Grid.Column="2"
                Content="{DynamicResource Lang.Settings}"
                Command="{Binding ShowSettingsViewCommand}" />
    </Grid>
</UserControl>